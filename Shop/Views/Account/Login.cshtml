@model LoginViewModel
@{
    Layout = null; // Trang độc lập, không dùng layout chung
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập - GodaShop</title>
    <link rel="shortcut icon" href="~/images/logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #74ebd5, #9face6);
            font-family: 'Segoe UI', sans-serif;
        }

        .login-box {
            max-width: 450px;
            margin: 80px auto;
            background: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        }

            .login-box h2 {
                margin-bottom: 30px;
                color: #333;
            }

        .form-control {
            height: 45px;
        }

        .btn-login {
            height: 45px;
            font-weight: bold;
        }

        .logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .logo img {
                height: 50px;
            }

        footer {
            text-align: center;
            color: #fff;
            margin-top: 40px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="login-box bg-white">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.jpg" alt="Logo" />
            </a>
        </div>

        <h2 class="text-center">Đăng nhập hệ thống</h2>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Tài khoản</label>
                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-login">Đăng nhập</button>
            </div>

            <div class="text-center">
                <a asp-action="LoginByGoogle" asp-controller="Account" class="btn btn-danger btn-sm">
                    <i class="fab fa-google"></i> Đăng nhập với Google
                </a>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Register" asp-controller="Account">Chưa có tài khoản?</a> |
                <a asp-action="ForgetPass" asp-controller="Account">Quên mật khẩu</a>
            </div>
        </form>
    </div>

    <footer>
        © 2025 GodaShop - All rights reserved
    </footer>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
