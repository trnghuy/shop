@model UserModel
@{
    ViewData["Title"] = "Cập Nhật Thông Tin Tài Khoản";
}
<section id="">
   
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">


                <form asp-action="UpdateInfoAccount" asp-controller="Account" method="POST">

                        <input type ="hidden" asp-for="Id"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label>Tài khoản: </label>
                            <input asp-for="Username" readonly class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Email: </label>
                            <input asp-for="Email" readonly class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu: </label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button class="btn btn-warning">Create</button>
                    </form>
               
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}