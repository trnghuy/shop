@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Danh sách chức vụ";
}
<h2 class="my-4 text-center">DANH SÁCH CHỨC VỤ</h2>
<a class="btn btn-success" asp-action="Create" asp-controller="Role">Thêm</a>
<table class="table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên chức vụ</th>
            <th>Chức vụ</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>
                
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
