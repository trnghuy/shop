@model AppUserModel
@{
    ViewData["title"] = "Tạo Tài Khoản";
}
<h2 class="my-4 text-center">TẠO TÀI KHOẢN</h2>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label>Tài khoản</label>
            <input asp-for="UserName" required class="form-control"/>
            <span asp-validation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" required class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>SĐT</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Mật Khẩu</label>
            <input type="password" asp-for="PasswordHash" required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>

         <div class="form-group"> 
             <label>Chức vụ</label> 
             <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles"> 
                 
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div> 

        <div class="form-group">
            <button class="btn btn-primary">Tạo</button>
        </div>
    </form>
    <a asp-action="Index">Quay về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
