@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh sách sản phẩm";

}
<h2 class="my-4 text-center">DANH SÁCH SẢN PHẨM</h2>
<a class="btn btn-success" asp-action="Create" asp-controller="Product">Thêm</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên Sản Phẩm</th>
            <th>Số lượng</th>
            <th>Số lượng đã bán</th>
            <th>Mô tả</th>
            <th>Giá</th>
            
            <th>Hình</th>
            <th>Loại</th>
            <th>Thương hiệu</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b></td>
                <td><b>@item.Sold</b></td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 đ")</td>
                <td><img src="~/media/products/@item.Image" width="120"></td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Thêm sl</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
