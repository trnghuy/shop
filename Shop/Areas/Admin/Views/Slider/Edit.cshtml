@model SliderModel
@{
    ViewData["title"] = "Sửa hình ảnh";
}
<h2 class="my-4 text-center">SỬA HÌNH ẢNH</h2>
<div class="col-md-9">
    <form asp-action="Edit" asp-controller="Slider" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
</div>
        <div class="form-group">
            <label>Tên</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        

        <div class="form-group">
            <label>Trạng thái</label>
            <select asp-for="Status" class="form-control">
                @if (@Model.Status == 1)
                {
                    <option selected value="1">Hiển thị</option>
                    <option value="0">Ẩn</option>
                }
                else
                {
                    <option value="1">Hiển thị</option>
                    <option selected value="0">Ẩn</option>
                }
            </select>
            
        </div>

        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control-file" />
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
            <img src="~/media/sliders/@Model.Image" width="400px" height="200px" />
        </div>


        <div class="form-group">
            <button class="btn btn-primary">Sửa</button>
        </div>
    </form>
    <a asp-action="Index">Quay về</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUpload").change(function(){
            readURL(this);
        })

    </script>
}
