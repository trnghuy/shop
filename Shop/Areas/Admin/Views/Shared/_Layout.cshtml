<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["title"] - Admin Areas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ✅ Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Original CSS (KEEP) -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="//cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/css/price-range.css" rel="stylesheet" />
    <link href="~/css/animate.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/ico/favicon.ico" />
    
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            background-color: #2c3e50;
            min-height: 100vh;
            width: 250px;
            transition: width 0.3s ease;
        }

            .sidebar.collapsed {
                width: 70px;
            }

            .sidebar a {
                color: #ecf0f1;
                text-decoration: none;
                padding: 12px 20px;
                display: flex;
                align-items: center;
            }

                .sidebar a:hover {
                    background-color: #34495e;
                }

            .sidebar i {
                width: 20px;
                text-align: center;
            }

            .sidebar .link-text {
                margin-left: 10px;
            }

            .sidebar.collapsed .link-text {
                display: none;
            }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .main-collapsed {
            margin-left: 70px;
        }

        .topbar {
            background: #f8f9fa;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid #ddd;
        }

        .toggle-btn {
            background: none;
            border: none;
            font-size: 24px;
            color: #333;
        }

        .logo img {
            height: 40px;
            margin-left: 20px;
        }

        footer {
            margin-top: 40px;
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <div id="sidebar" class="sidebar d-flex flex-column">
            <a href="#" onclick="toggleSidebar()" class="toggle-btn mb-3 px-4">
                <i class="bi bi-list"></i><span class="link-text"> Menu</span>
            </a>
            <a href="/"><i class="bi bi-house-door"></i><span class="link-text"> Trang chủ</span></a>
            <a asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i><span class="link-text"> Dashboard</span></a>
            <a asp-controller="Slider" asp-action="Index"><i class="bi bi-images"></i><span class="link-text"> Hình ảnh</span></a>
            <a asp-controller="Product" asp-action="Index"><i class="bi bi-box-seam"></i><span class="link-text"> Sản phẩm</span></a>
            <a asp-controller="Shipping" asp-action="Index"><i class="bi bi-truck"></i><span class="link-text"> Vận chuyển</span></a>
            <a asp-controller="Category" asp-action="Index"><i class="bi bi-list-task"></i><span class="link-text"> Danh mục</span></a>
            <a asp-controller="Brand" asp-action="Index"><i class="bi bi-award"></i><span class="link-text"> Thương hiệu</span></a>
            <a asp-controller="Order" asp-action="Index"><i class="bi bi-bag-check"></i><span class="link-text"> Đơn hàng</span></a>
            <a asp-controller="User" asp-action="Index"><i class="bi bi-person-circle"></i><span class="link-text"> Tài khoản</span></a>
            <a asp-controller="Role" asp-action="Index"><i class="bi bi-shield-lock"></i><span class="link-text"> Chức vụ</span></a>
            <a asp-controller="Contact" asp-action="Index"><i class="bi bi-envelope-fill"></i><span class="link-text"> Liên hệ</span></a>

        </div>

        <!-- Main content -->
        <div id="mainContent" class="main-content">
            

            <div class="container-fluid">
                @Html.Partial("_NotificationPartial")
                @RenderBody()
            </div>

            <footer class="mt-5">
                © 2025 GodaShop Admin
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/js/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/price-range.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="//cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/backend/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.all.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("mainContent").classList.toggle("main-collapsed");
        }

        $(function () {
            var message = '@TempData["success"]';
            if (message) {
                Swal.fire({
                    position: "center",
                    icon: "success",
                    title: message,
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        });

        let table = new DataTable('#myTable');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
